{% extends "parent.njk" %}

{% block room %}
<div class="background">
  <h1 class="title">Geekle</title>
    <h3 class="subTitle">GALAXYCON CHARACTER GUESSING GAME</h3>
    <div class="guesses">0 of 8 guesses</div>
    <form id="guess" class="guess-bar" role="search">
      <label for="charName">First name:</label>
      <input 
        type="search" 
        id="charName" 
        name="charName"
        autocomplete="off"
        list="character-list"
      />
      <datalist id="character-list">
        <option value="Batman">
        <option value="Superman">
        <option value="Darth Vader">
        <option value="Bubbles">
        <option value="Goku">
        <option value="Harry Potter">
        <option value="Captain Kirk">
        <option value="Zelda">
        <option value="Skeletor">
        <option value="Mario">
        <option value="Rick Oâ€™Connell">
        <option value="Gill-Man">
        <option value="Frank N. Furter">
      </datalist>
    </form>
    <canvas id="myCanvas" width="480" height="600"/>
</div>
{% endblock %}

{% block script %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.1/socket.io.js"></script>
  <script src="script.js"></script>
{% endblock %}